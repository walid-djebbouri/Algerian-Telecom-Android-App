<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="#24333c"

    android:layout_margin="15dp">





    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="Djebbouri"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/nom"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:text="Walid"
                android:layout_height="wrap_content"
                android:layout_width="50sp"
                android:id="@+id/prenom"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="Bayadh"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/wilaya"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:text="Labyad"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/daira"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="Labyad"
                android:layout_height="wrap_content"
                android:id="@+id/commune"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:layout_width="50sp"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:text="18 Logement"
                android:layout_height="wrap_content"
                android:id="@+id/cite"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:layout_width="50sp"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="0"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/bloc"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:text="13"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/porte"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:text="0666257281"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/tel"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:background="@android:color/darker_gray"
                android:lines="1"
                android:ellipsize="end"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Traiter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Triater"
                android:layout_weight="1"
                android:textSize="30sp"
                android:background="#1ab188"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iddemande"
                android:layout_weight="1"
                android:textSize="0sp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"/>



        </LinearLayout>





    </LinearLayout>
</LinearLayout>
